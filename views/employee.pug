extends ./layout/_layout

block content
  a(href="/employees").btn.btn-link Go Back
  .panel.panel-default
    .panel-heading
      .panel-title
        span= employee.name
        | &nbsp;
        span.text-muted
          small= employee._id
    .panel-body
      dl 
        dt DOB
        dd= employee.dob.toLocaleString('en-US', {dateStyle: 'medium'})
        dt Phone
        dd= employee.phone
        dt Email 
        dd= employee.email
        dt Job
        dd= employee.job
        dt Skill
        dd
          form(id="skillupdateform" action=`/skillclassupdate/${employee._id}` method="POST") 
            select.form-control(name="skill" id="skillupdateselect" onchange="document.getElementById('skillupdateform').submit()")
              each skillLevel of allowedSkillLevels 
                option= skillLevel


            
    .panel-footer
      form(action=`/employees/delete/${employee._id}`, method="POST") 
        button.btn.btn-danger(type="submit") Delete Employee

      